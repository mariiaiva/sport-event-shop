<section class="all-collections">
  <h1>New Arrivals</h1>
  <div class="collection-container">
    <div class="all-collections-wrapper">
      {% for product in collections.all.products limit:6 %}
      <div class="collection-card">
        <img width="300" height="300" loading="lazy" src="{{ product.featured_image | image_url }}"
          alt="{{ product.title }}">
        <h3><a href="{{ product.url }}">{{ product.title }}</a></h3>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .all-collections {
  background: {{ section.settings.background }};
  color: {{ section.settings.text_color }};
  padding: 40px 20px;
  text-align: center;
}

.collection-container {
  overflow-x: auto;
  padding: 10px 0;
}

.all-collections-wrapper {
  display: flex;
  gap: 20px;
  justify-content: flex-start;
  scroll-snap-type: x mandatory;
  -webkit-overflow-scrolling: touch;
  overflow-x: auto;
  padding-bottom: 10px;
}

.collection-card {
  background-color: #fff;
  border-radius: 8px;
  border: 1px solid #ddd;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  overflow: hidden;
  padding: 15px;
  width: 260px;
  flex: 0 0 auto;
  text-align: center;
  scroll-snap-align: start;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.collection-card img {
  width: 100%;
  height: 200px;
  object-fit: cover;
  border-radius: 5px;
  transition: transform 0.3s ease;
}

.collection-card h3 {
  margin-top: 15px;
  font-size: 16px;
  color: #333;
  font-weight: 600;
}

.collection-card h3 a {
  text-decoration: none;
  color: #333;
}

.collection-card a:hover {
  text-decoration: underline;
}

.collection-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  background-color: #f9f9f9;
}

.collection-card:hover img {
  transform: scale(1.05);
}

@media (max-width: 600px) {
  .all-collections-wrapper {
    gap: 0;
  }

  .collection-card {
    width: 100vw;
    flex: 0 0 100vw;
    scroll-snap-align: start;
    margin: 0;
    border-radius: 0;
  }
}
</style>
